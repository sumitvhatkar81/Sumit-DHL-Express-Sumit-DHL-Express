            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has upload details', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson).to.have.property('id');",
                  "    pm.expect(responseJson).to.have.property('name');",
                  "    pm.expect(responseJson).to.have.property('size');",
                  "    pm.expect(responseJson).to.have.property('contentType');",
                  "    pm.expect(responseJson).to.have.property('uploadedAt');",
                  "});",
                  "",
                  "pm.test('Content type is image', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson.contentType).to.include('image/');",
                  "});",
                  "",
                  "pm.test('File size is greater than 0', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson.size).to.be.greaterThan(0);",
                  "});",
                  "",
                  "// Store uploaded document ID",
                  "const responseJson = pm.response.json();",
                  "pm.collectionVariables.set('uploadedDocumentId', responseJson.id);"
                ],
                "type": "text/javascript"
              }
            }
