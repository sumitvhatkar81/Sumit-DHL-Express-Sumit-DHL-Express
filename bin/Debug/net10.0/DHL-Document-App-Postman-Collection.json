        {
          "name": "Create Document (JSON)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has created document', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson).to.have.property('id');",
                  "    pm.expect(responseJson).to.have.property('name');",
                  "    pm.expect(responseJson.name).to.equal('Test Document');",
                  "});",
                  "",
                  "pm.test('Location header is present', function () {",
                  "    pm.expect(pm.response.headers.has('Location')).to.be.true;",
                  "});",
                  "",
                  "// Store created document ID for cleanup",
                  "const responseJson = pm.response.json();",
                  "pm.collectionVariables.set('createdDocumentId', responseJson.id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
